#!/usr/bin/make -f

build:

clean:
	dh_testdir
	dh_testroot
	dh_clean
	rm -f debian/dtc-xen.init debian/dtc-xen-firewall.init

	# As per advice from Christian Perrier
	debconf-updatepo

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	dh_link

	$(MAKE) install DESTDIR=debian/dtc-xen
	$(MAKE) install_dtc-xen-firewall DESTDIR=debian/dtc-xen-firewall

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs doc/changelog
	dh_installdebconf
	dh_installdocs
	dh_installlogrotate
	dh_installinit
	dh_fixperms
	dh_compress
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch: install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
